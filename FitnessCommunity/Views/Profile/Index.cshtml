@model ProfileViewModel
@inject FitnessCommunity.Services.ApplicationUserService userService 
@{
    ViewData["Title"] = "Index";
    string welcomeMessage = !string.IsNullOrEmpty(Model.FirstName) && !string.IsNullOrEmpty(Model.LastName) ? 
        "Welcome "+Model.FirstName+" "+Model.LastName : "Welcome "+ User.Identity.Name;

}

<div class="container">
    <div class="row">

        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>@welcomeMessage</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="UpdateProfile" method="post">
                                <div class="form-group row">
                                    <label asp-for="FirstName" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="FirstName" class="form-control">
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="LastName" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="LastName" class="form-control">
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="MeasureType" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="MeasureType" class="form-control">
                                        <span asp-validation-for="MeasureType"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="PhoneNumber" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <input asp-for="PhoneNumber" class="form-control">
                                        <span asp-validation-for="PhoneNumber"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="PublicInfo" class="col-4 col-form-label"></label>
                                    <div class="col-8">
                                        <textarea asp-for="PublicInfo" class="form-control" cols="40" rows="4"></textarea>
                                        <span asp-validation-for="PublicInfo"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8">
                                        <button type="submit" class="btn btn-primary">Update My Profile</button>
                                    </div>
                                </div>
                            </form>
                            <a asp-action="ForgotPassword">Change Password?</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>