@model  IEnumerable<TableWeightLogViewModel>
@{
    ViewData["Title"] = "GetAllWeightLogs";
}

<div style="width:60%">

    <table class="table table-striped table-hover table-responsive" id="weightLogsTable">
        <thead>
            <tr class="info">
                <th>
                    Date
                    <span class="glyphicon glyphicon-sort-by-attributes"></span> 
                </th>
                <th>
                    Weight:
                    <span class="glyphicon glyphicon-sort-by-order"></span>
                </th>
            </tr>
        </thead>

        <tbody>
        @{
            int i = 1;
            foreach (var log in Model)
            {
                <tr>
                    <td>
                       @i. @log.LogDate
                    </td>
                    <td>
                        <label style="width:35px"> @log.WeightValue</label>
                        <a  asp-action="DeleteWeightLog" asp-route-id="@log.Id">Delete</a>
                        <a style="padding-left:5px"asp-action="EditWeightLog" asp-route-id="@log.Id">Edit</a>
                    </td>
                </tr>
                i++;
            }
        }
        </tbody>
    </table>
</div>

@section  Scripts 
{
    <script>
        $(document).ready(function () {
            var table = $('#weightLogsTable').DataTable();
        });
    </script>
}