@model WeightLogViewModel
@{
    ViewBag.Title = "Edit Weight Log";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LogDate"></label>
                    <input asp-for="LogDate" class="form-control" disabled />
                    <span asp-validation-for="LogDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WeightValue">Weight in @ViewBag.MeasureType</label>
                    <input asp-for="WeightValue" class="form-control" />
                    <span asp-validation-for="WeightValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Update</button>
                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")

}